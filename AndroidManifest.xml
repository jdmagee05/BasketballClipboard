<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremy.basketballclipboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jeremy.basketballclipboard.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jeremy.basketballclipboard.PracticePlannerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_practice_planner"
            android:parentActivityName="com.jeremy.basketballclipboard.MainActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremy.basketballclipboard.MainActivity" />
        </activity>
        <activity
            android:name="com.jeremy.basketballclipboard.ClipboardActivity"
            android:label="@string/title_activity_clipboard"
            android:parentActivityName="com.jeremy.basketballclipboard.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremy.basketballclipboard.MainActivity" />
        </activity>
        <activity
            android:name="com.jeremy.basketballclipboard.StatSheetActivity"
            android:label="@string/title_activity_stat_sheet"
            android:parentActivityName="com.jeremy.basketballclipboard.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremy.basketballclipboard.MainActivity" />
        </activity>
        <activity
            android:name="com.jeremy.basketballclipboard.PracticeHubActivity"
            android:label="@string/title_activity_practice_hub"
            android:parentActivityName="com.jeremy.basketballclipboard.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremy.basketballclipboard.MainActivity" />
        </activity>
        <activity
            android:name="com.jeremy.basketballclipboard.OpenStatSheetActivity"
            android:label="@string/title_activity_open_stat_sheet"
            android:parentActivityName="com.jeremy.basketballclipboard.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jeremy.basketballclipboard.MainActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" >
    </uses-permission>

